    <!-- 去掉系统状态栏阴影 -->
    <style name="Theme.IOSched" parent="android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 未读消息的样式 -->
    <style name="conversation_unread_text" parent="android:Widget.TextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- 搜索框文本 -->
    <style name="search_text" parent="android:Widget.TextView">
        <item name="android:textColor">#555555</item>
        <item name="android:textColorHint">#cccccc</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">9.0dip</item>
    </style>

    <style name="edittext_text" parent="android:Widget.EditText">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#888888</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">13.0dip</item>
    </style>

    <style name="validation_edittext_text" parent="android:Widget.EditText">
        <item name="android:textColor">#888888</item>
        <item name="android:textColorHint">#888888</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="group_create" parent="android:Widget.TextView">
        <item name="android:textColor">#707070</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="myDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 除去title -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="mTextOne">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="mTextTwo">
        <item name="android:layout_width">70dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="mEditTextOne">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="mButtonOne">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AnimationFade">

        <!-- PopupWindow左右弹出的效果 -->
        <item name="android:windowEnterAnimation">@anim/left_in</item>
        <item name="android:windowExitAnimation">@anim/right_out</item>
    </style>
    <!-- <item name="android:background">@drawable/danger_linear_shape</item> -->
    <style name="DangerousLinear">

        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <!-- <item name="android:background">@drawable/danger_tag_shape</item> -->
    <style name="DangerousTextTag">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:paddingLeft">5dp</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="DangerousEdit">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


