<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D4D4D4"
    android:hapticFeedbackEnabled="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LayoutTop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/title_bar" />
    </LinearLayout>

    <easyway.Mobile.util.DateLine
        android:id="@+id/dateline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"></easyway.Mobile.util.DateLine>

    <easyway.Mobile.util.PullRefreshListView
        android:id="@+id/cautionlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/dateline"
        android:layout_below="@id/LayoutTop"
        android:layout_gravity="center"
        android:layout_marginTop="-1dip"
        android:background="@drawable/sell_ticket_gradient"
        android:cacheColorHint="#00000000"
        android:divider="@color/gray"
        android:dividerHeight="1dip"
        android:fadingEdge="none" />

</RelativeLayout>