<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/title_bar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.74"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/gvList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="-5dp"
            android:background="#D4D4D4"
            android:cacheColorHint="#00000000"
            android:divider="@color/gray"
            android:dividerHeight="1dip"
            android:fadingEdge="none" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layBottom"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/bg_footer" >

        <Button
            android:id="@+id/btnShift_In_SelectAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_selector"
            android:gravity="center"
            android:text="@string/Shift_In_SelectAll"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnShift_In_UnSelectAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btnShift_In_SelectAll"
            android:background="@drawable/btn_selector"
            android:gravity="center"
            android:text="@string/Shift_In_UnSelectAll"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnShift_In_Sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_commit_small"
            android:gravity="center"
            android:layout_marginLeft="1dp"
            android:text="@string/Shift_In_Sign"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>