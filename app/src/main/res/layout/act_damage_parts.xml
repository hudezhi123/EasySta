<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/title_bar" />
    </LinearLayout>
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:layout_marginTop="10dp"
       android:gravity="left"
       >
       <TextView 
           style="@style/mTextOne"
           android:text="设备类别"
           android:layout_width="100dp"
           />
       <Spinner 
           android:layout_width="200dp"
           android:layout_height="40dp"
           android:entries="@array/classifications"
           android:layout_marginLeft="10dp"
           />
   </LinearLayout>
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:gravity="left"
       >
       <TextView 
           style="@style/mTextOne"
           android:text="备品备件编号"
           android:layout_width="100dp"
           />
       <EditText 
           style="@style/mTextOne"
           android:layout_width="200dp"
           android:layout_height="35dp"
           android:layout_marginLeft="10dp"
           android:text="DSP_001"
           />
   </LinearLayout>
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:gravity="left"
       >
       <TextView 
           style="@style/mTextOne"
           android:text="备品备件名称"
           android:layout_width="100dp"
           />
       <EditText 
           style="@style/mTextOne"
           android:layout_width="200dp"
           android:layout_height="35dp"
           android:layout_marginLeft="10dp"
           android:text="DSP_001"
           />
   </LinearLayout>
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:gravity="left"
       >
       <TextView 
           style="@style/mTextOne"
           android:text="设备价格"
           android:layout_width="100dp"
           />
       <EditText 
           style="@style/mTextOne"
           android:layout_width="200dp"
           android:layout_height="35dp"
           android:layout_marginLeft="10dp"
           android:text="123.00"
           />
   </LinearLayout>
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:gravity="left"
       >
       <TextView 
           style="@style/mTextOne"
           android:text="供应商"
           android:layout_width="100dp"
           />
       <Spinner 
           android:layout_width="200dp"
           android:layout_height="40dp"
           android:entries="@array/suppliers"
           android:layout_marginLeft="10dp"
           />
   </LinearLayout>
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:layout_marginTop="5dp"
       android:gravity="left"
       >
       <TextView 
           style="@style/mTextOne"
           android:text="采购日期"
           android:layout_width="100dp"
           />
       <EditText 
           style="@style/mTextOne"
           android:layout_width="200dp"
           android:layout_height="35dp"
           android:layout_marginLeft="10dp"
           android:text="2015-01-02 12:34:56"
           />
   </LinearLayout>
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:layout_marginTop="5dp"
       android:gravity="left"
       >
       <TextView 
           style="@style/mTextOne"
           android:text="保修期"
           android:layout_width="100dp"
           />
       <EditText 
           style="@style/mTextOne"
           android:layout_width="200dp"
           android:layout_height="35dp"
           android:layout_marginLeft="10dp"
           android:text="2015-01-02 12:34:56"
           />
   </LinearLayout>
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:layout_marginTop="5dp"
       android:gravity="left"
       >
       <TextView 
           style="@style/mTextOne"
           android:text="报废日期"
           android:layout_width="100dp"
           />
       <EditText 
           style="@style/mTextOne"
           android:layout_width="200dp"
           android:layout_height="35dp"
           android:layout_marginLeft="10dp"
           android:text="2015-01-02 12:34:56"
           />
   </LinearLayout>
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:layout_marginTop="20dp"
       android:gravity="center"
       >
       <Button 
           style="@style/mTextOne"
           android:layout_width="100dp"
           android:layout_height="35dp"
           android:layout_marginLeft="10dp"
           android:text="保存"
           />
       <Button 
           style="@style/mTextOne"
           android:layout_width="100dp"
           android:layout_height="35dp"
           android:layout_marginLeft="10dp"
           android:text="取消"
           />
   </LinearLayout>
   
</LinearLayout>
