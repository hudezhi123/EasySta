<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D4D4D4"
    android:gravity="center_vertical" >

    <TextView
        android:id="@+id/Adapter_NewShiftInfo_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:text="车次："
        android:textColor="@color/black"
        android:textSize="20dp" />
    
    <TextView
        android:id="@+id/Adapter_NewShiftInfo_Num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Adapter_NewShiftInfo_Attachment"
        android:layout_toRightOf="@+id/textView1"
        android:gravity="center"
        android:text="G5802"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/Adapter_NewShiftInfo_Attachment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="100dp"
        android:layout_toRightOf="@id/Adapter_NewShiftInfo_1"
        android:background="@drawable/img_attach" />

    <Button
        android:id="@+id/Adapter_NewShiftInfo_CarryOut"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/Adapter_NewShiftInfo_Attachment"
        android:text="执行人"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Adapter_NewShiftInfo_1"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:text="交班信息："
        android:textColor="@color/black"
        android:textSize="18dp" />

	<TextView
	    android:id="@+id/Adapter_NewShiftInfo_text" 
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:text="asdfasdf"
    	android:layout_below="@id/Adapter_NewShiftInfo_1"
    	android:layout_toRightOf="@id/textView1"
    	android:textSize="15dp"
    	android:textColor="@color/black"
    	android:layout_marginTop="20dp"
    	android:layout_alignBottom="@id/textView1"
    	/>
    
    
</RelativeLayout>