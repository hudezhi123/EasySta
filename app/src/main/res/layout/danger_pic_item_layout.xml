<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:background="@color/white"
    android:gravity="center_vertical|left"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_exception_pic_item"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/add_pic_icon" />

    <ImageView
        android:id="@+id/img_delete_pic_item"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/img_exception_pic_item"
        android:layout_alignTop="@+id/img_exception_pic_item"
        android:src="@drawable/delete_pic_icon"
        android:visibility="visible" />

</RelativeLayout>

