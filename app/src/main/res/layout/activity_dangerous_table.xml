<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dangerous"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D4D4D4"
    android:orientation="vertical"
    tools:context="easyway.Mobile.DangerousGoods.DangerousFormActivity">

    <include layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="2dp">

            <LinearLayout style="@style/DangerousLinear">

                <TextView
                    style="@style/DangerousTextTag"
                    android:text="班组" />


            </LinearLayout>

            <LinearLayout style="@style/DangerousLinear">

                <TextView
                    style="@style/DangerousTextTag"
                    android:text="日期时间" />


            </LinearLayout>

            <LinearLayout style="@style/DangerousLinear">

                <TextView
                    style="@style/DangerousTextTag"
                    android:text="危险品携带人姓名" />


            </LinearLayout>

            <LinearLayout style="@style/DangerousLinear">

                <TextView
                    style="@style/DangerousTextTag"
                    android:text="性别" />


            </LinearLayout>

            <LinearLayout style="@style/DangerousLinear">

                <TextView
                    style="@style/DangerousTextTag"
                    android:text="乘坐车次" />


            </LinearLayout>

            <LinearLayout style="@style/DangerousLinear">

                <TextView
                    style="@style/DangerousTextTag"
                    android:text="家庭地址" />


            </LinearLayout>

            <LinearLayout style="@style/DangerousLinear">

                <TextView
                    style="@style/DangerousTextTag"
                    android:text="身份证件" />


            </LinearLayout>

            <LinearLayout style="@style/DangerousLinear">

                <TextView
                    style="@style/DangerousTextTag"
                    android:text="危险品品名" />


            </LinearLayout>

            <LinearLayout style="@style/DangerousLinear">

                <TextView
                    style="@style/DangerousTextTag"
                    android:text="数量" />



            </LinearLayout>

            <LinearLayout style="@style/DangerousLinear">

                <TextView
                    style="@style/DangerousTextTag"
                    android:text="质量" />



            </LinearLayout>

            <LinearLayout style="@style/DangerousLinear">

                <TextView
                    style="@style/DangerousTextTag"
                    android:text="查获人姓名" />


            </LinearLayout>

            <LinearLayout style="@style/DangerousLinear">

                <TextView
                    style="@style/DangerousTextTag"
                    android:text="岗位" />



            </LinearLayout>

            <LinearLayout style="@style/DangerousLinear">

                <TextView
                    style="@style/DangerousTextTag"
                    android:text="物品去向" />



            </LinearLayout>

            <LinearLayout style="@style/DangerousLinear">

                <TextView
                    style="@style/DangerousTextTag"
                    android:text="经办人" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/danger_linear_shape"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/DangerousTextTag"
                    android:text="备注" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/pic_choose_linear_shape"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="1dp">

                <LinearLayout
                    android:id="@+id/linear_pic_content_danger"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="@color/white"
                    android:orientation="horizontal">


                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|bottom"
                    android:text="选择图片" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="提交" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
